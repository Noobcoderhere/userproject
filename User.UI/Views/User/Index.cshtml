@model IEnumerable<User.App.ViewModel.GetUserVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="CreateUser">Create New</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateUser", new { id = item.Id }) |
                        @Html.ActionLink("Details", "UserDetail", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

